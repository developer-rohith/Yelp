<%- layout('layouts/boilerPlate')%>

    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form class="needs-validation" action="/campgrounds" method="post" enctype="multipart/form-data" novalidate>
                <div class=" form-group mb-3">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" placeholder="Enter Title"
                        name="campground[title]" required>

                </div>
                <div class="form-group mb-3">
                    <label for="location">Location</label>
                    <input type="text" class="form-control" id="location" placeholder="location"
                        name="campground[location]" required>
                </div>

                <label for="price">Price</label>
                <div class="input-group mb-3">

                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="text" id="price" class="form-control" name="campground[price]" required>
                    <div class="input-group-append">
                        <span class="input-group-text">.00</span>
                    </div>
                </div>


                <label for="image">Image </label>

                <div class="form-group mb-3">

                    <input type="file" name="image" id="image" multiple>

                </div>

                <div class="form-group mb-3">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" rows="3" name="campground[description]"
                        required></textarea>

                </div>



                <button type="submit" class="btn btn-primary">Add Campground</button>
            </form>


        </div>
    </div>